      </div>


      <div class="col-xs-8 col-sm-8 col-md-8 discover-projects-container">


        <div class="discover-projects-header">
          <h1>Projects</h1>
          <h3>Look at all these awesome projects!!!</h3>
        </div>

        <div class="project-type-container">
          <table>
            <tr>
              <td><a href="/projects?utf8=✓&category=SG">SOCIAL GOOD</a></td>
              <td><a href="/projects?utf8=✓&category=SM">SOCIAL</a></td>
              <td><a href="/projects?utf8=✓&category=ET">ED TECH</a></td>
            </tr>
            <tr>
              <td><a href="/projects?utf8=✓&category=FT">FIN TECH</a></td>
              <td><a href="/projects?utf8=✓&category=L">LIFESTYLE</a></td>
              <td><a href="/projects">ALL PROJECTS</a></td>
            </tr>
          </table>
        </div>




        <div class="recommended-projects-header">
          <h2>Recommended for you</h2>
          <hr class="header-hr">
        </div>

              <div class="row filter-profiles-row">
                <div class="col-xs-3 col-sm-3 col-md-3 filter-profiles-input">
                  <button onclick="window.location='/projects';">Browse All</button>
                </div>
                <%= form_tag(projects_path, :method => "get", id: "search-form") do %>
                <div class="col-xs-3 col-sm-3 col-md-3 filter-profiles-input">
                  <%= text_field_tag :name, params[:name], class: "form-control", placeholder: "Project Name" %>
                </div>
                <div class="col-xs-3 col-sm-3 col-md-3 filter-profiles-input">
                  <%= text_field_tag :about, params[:about], class: "form-control", placeholder: "Description" %>
                </div>
                <div class="col-xs-3 col-sm-3 col-md-3 filter-profiles-input">
                  <%= text_field_tag :location, params[:location], class: "form-control", placeholder: "Location" %>
                </div>
                <button class="btn" type="submit"><i class="icon-search"></i></button>
              <% end %>

              </div>

<% if @search_results != nil %>
  <h2>Search Results</h2>
<% @search_results.each_slice(3) do |project_batch| %>
        <div class="col-xs-12 col-sm-12 col-md-12 recommended-projects-container">
<% project_batch.each do |project| %>
          <div class="col-xs-4 col-sm-4 col-md-4 recommended-project">
            <img src="http://piqueapp.github.io/assets/img/av.png" alt="recommended project">
            <div class="recommended-projects-content">
              <h5><%= project.name %></h5>
              <p><%= project.about %></p>
              <ul class="project-popularity-list list-unstyled ">
                <li><%= project.location %></li>
                <li><%= project.length %></li>
                <li>Created by: <%= project.owner %></li>
              </ul>
              <ul class="project-tags-list list-unstyled">
                <li class="project-tag"><a href="#">#WEeee</a></li>
                <li class="project-tag"><a href="#">#WEeee</a></li>
                <li class="project-tag"><a href="#">#WEeee</a></li>
                <li class="project-tag"><a href="#">#WEeee</a></li>
              </ul>
            </div>
          </div>
          <% end %>
        </div>
<% end %>
<% end %>

