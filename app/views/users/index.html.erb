              <div class="recommended-profiles-header">
                <h2>Recommended for you</h2>
                <hr>
              </div>

<!-- specific user search -->
<%= form_tag(users_path, :method => "get", class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
    <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search People" %>
    <button class="btn" type="submit"><i class="icon-search"></i></button>
  </div>
<% end %>

              <div class="row filter-profiles-row">
                <div class="col-xs-3 col-sm-3 col-md-3 filter-profiles-input">
                  <button onclick="window.location='/users';">Browse All</button>
                </div>
                <%= form_tag(users_path, :method => "get", id: "search-form") do %>
                <div class="col-xs-3 col-sm-3 col-md-3 filter-profiles-input">
                  <%= text_field_tag :industry, params[:industry], class: "form-control", placeholder: "Industry" %>
                </div>
                <div class="col-xs-3 col-sm-3 col-md-3 filter-profiles-input">
                  <%= text_field_tag :headline, params[:headline], class: "form-control", placeholder: "Positions/Interests" %>
                </div>
                <div class="col-xs-3 col-sm-3 col-md-3 filter-profiles-input">
                  <%= text_field_tag :location, params[:location], class: "form-control", placeholder: "Location" %>
                </div>
                <button class="btn" type="submit"><i class="icon-search"></i></button>
              <% end %>
              </div>

<!-- non-specific user search results -->
<% if @search_results != nil %>
  <h2>Search Results</h2>
<% @search_results.each_slice(2) do |user_batch| %>
             <!-- row of two profiles-->
              <div class="row profiles-row">
                <% user_batch.each do |user| %>
                <div class="col-xs-6 col-sm-6 col-md-5 recommended-profile-<%= cycle("left", "right") %>">
                  <div class="row profile-top">
                    <div class="col-xs-4 col-sm-4 col-md-4 text-center profile-img-container">
                      <img class="img-responsive" src="<%= user.image %>" alt="recommended profile">
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-5 recommended-profiles-content">
                      <h5><%= link_to user.name, user %></h5>
                      <p><%= user.headline %></p>
                      <p><%= user.location %></p>
<!--                       <span>
                        <p>University of Cambridge</p>
                        <p>Currently works at Facebook</p>
                      </span> -->
                    </div>
                  </div>
                  <div class="row profile-bottom">
                    <div class="col-xs-12 col-sm-12 col-md-12 recommended-profiles-content-bottom">
                      <!-- <ul class="profile-tags-list list-unstyled">
                        <li class="profile-tag"><a href="#">Objective-C</a></li>
