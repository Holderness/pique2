                        <li class="profile-tag"><a href="#">C++</a></li>
                        <li class="profile-tag"><a href="#">C#</a></li>
                      </ul> -->
                      <p><%= user.industry %></p>
                    </div>
                  </div>
                </div><!-- profile-right -->
                <% end %>
              </div><!-- row of two -->
              <% end %>
<% end %>


